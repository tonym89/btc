<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>

    <span id="coinoutletlogo" style="font-size: 35px;
    background: -webkit-linear-gradient(left, #DA0109, #9D0180, #6100FB);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
      font-family: 'Nunito', sans-serif;
      font-weight: bold;"> CoinOutlet</span>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <!-- <%= link_to "Buy bitcoin", new_buy_path, class: "navbar-wagon-item navbar-wagon-link" %> -->
<!--       <%= link_to "My Trades", buys_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Account Verification", edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %> -->

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "accountlogin-icon.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to pages_profile_path do %>
                <i class="fa fa-user"></i> <%= t(".My Profile", default: "My Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <i class="fas fa-id-card"></i>
              <%= t(".Verification", default: "Verify Account") %>
              <% end %>
            </li>
              <li>
              <%= link_to buys_path do %>
                <i class="fa fa-money-check"></i> <%= t(".My Trades", default: "My Trades") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
              <i class="fab fa-bitcoin"></i> <%= t(".Trade Now", default: "Trade Now") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login link (when logged out) -->
        <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "accountlogin-icon.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt"></i> <%= t(".My Profile", default: "Login") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user"></i> <%= t(".My Profile", default: "Create Account") %>
              <% end %>
            </li>


          </ul>
        </div>
      </div>

      <!-- <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %> -->
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg" style="margin-left: 90px">
    <div class="dropdown">
      <%= image_tag "accountlogin-icon.png", class: "dropdown-toggle", "data-toggle" => "dropdown", height: 40%>
      <!-- <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i> -->
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
        <li>
              <%= link_to pages_profile_path do %>
                <i class="fa fa-user"></i> <%= t(".My Profile", default: "My Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
              <i class="fas fa-id-card"></i>
              <%= t(".Verification", default: "Verify Account") %>
              <% end %>
            </li>
              <li>
              <%= link_to buys_path do %>
                <i class="fa fa-money-check"></i> <%= t(".My Trades", default: "My Trades") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
              <i class="fab fa-bitcoin"></i> <%= t(".Trade Now", default: "Trade Now") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
        </li>
        <% else %>
         <li>
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt"></i> <%= t(".My Profile", default: "Login") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user"></i> <%= t(".My Profile", default: "Create Account") %>
              <% end %>
            </li>

        <% end %>
      </ul>
    </div>

  </div>

</div>

