 <div class="container">
  <div class="row" >
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <div class="form-edit">


      <h2 >Account Details</h2>

      <p style="font-weight: bold"> Name:</p><p>
      <%=@user.first_name %> <%=@user.last_name %> </p>

            <p style="font-weight: bold">Email:</p> <%=@user.email %> </p>

      <h2 >Update Password</h2>
  <%= simple_form_for(@user, url: registration_path(@user), html: { method: :put }) do |f| %>
  <%= f.error_notification %>



    <%= f.input :password,
                hint: "Enter your new password",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                hint: "Confirm your new password",
                required: false,
                input_html: { autocomplete: "new-password" } %>

    <!-- <br> -->

    <%= f.input :current_password,
                hint: "Enter your current password to confirm changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>


    <div class="form-actions">
    <%= f.button :submit, "Update", :class=>"button-update" %>
  </div>







  </div>


<% end %>


    </div>

  </div>
</div>
